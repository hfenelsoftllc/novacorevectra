{
  "name": "novacorevectra",
  "version": "1.0.0",
  "description": "Consulting and Services Startup To empower organizations to lead the AI era by fusing world class strategy with ethical innovation. We build the intelligent systems that allow your business to",
  "main": "index.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "lint:security": "eslint . --ext .ts,.tsx,.js,.jsx --config .eslintrc.security.json",
    "security:audit": "npm audit --audit-level=moderate",
    "security:audit-fix": "npm audit fix",
    "security:secrets": "echo 'Run TruffleHog manually: trufflehog git file://. --config .trufflehog.yml'",
    "security:full": "npm run lint:security && npm run security:audit && echo 'Full security scan completed'",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "c8 jest --passWithNoTests",
    "test:coverage:components": "c8 --config .c8rc.components.json jest --passWithNoTests",
    "test:coverage:utils": "c8 --config .c8rc.utils.json jest --passWithNoTests",
    "test:coverage:services": "c8 --config .c8rc.services.json jest --passWithNoTests",
    "test:coverage:hooks": "c8 --config .c8rc.hooks.json jest --passWithNoTests",
    "test:coverage:constants": "c8 --config .c8rc.constants.json jest --passWithNoTests",
    "test:coverage:app": "c8 --config .c8rc.app.json jest --passWithNoTests",
    "test:coverage:by-type": "npm run test:coverage:components && npm run test:coverage:utils && npm run test:coverage:services && npm run test:coverage:hooks && npm run test:coverage:constants && npm run test:coverage:app",
    "coverage:summary": "node scripts/coverage-summary.js",
    "test:c8": "c8 jest --passWithNoTests",
    "coverage:c8": "c8 jest --passWithNoTests",
    "coverage:c8:report": "c8 report",
    "test:property": "jest --testNamePattern='Property'",
    "test:unit": "jest --testNamePattern='(?!Property)'",
    "type-check": "tsc --noEmit",
    "analyze": "ANALYZE=true npm run build",
    "clean": "rm -rf .next out dist coverage"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.2",
    "@radix-ui/react-slot": "^1.0.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "framer-motion": "^10.16.0",
    "lucide-react": "^0.263.0",
    "next": "^14.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.48.2",
    "tailwind-merge": "^1.14.0",
    "tailwindcss": "^3.3.0",
    "tailwindcss-animate": "^1.0.7",
    "web-vitals": "^3.5.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/jest": "^29.5.14",
    "@types/jest-axe": "^3.5.9",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "autoprefixer": "^10.4.0",
    "c8": "^10.1.3",
    "eslint": "^8.57.1",
    "eslint-config-next": "^14.2.35",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-security": "^1.7.1",
    "fast-check": "^3.13.0",
    "jest": "^29.7.0",
    "jest-axe": "^10.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.0",
    "prettier": "^3.0.0",
    "typescript": "^5.2.0"
  },
  "keywords": [
    "react",
    "typescript",
    "nextjs",
    "services",
    "refactor",
    "ai",
    "governance",
    "marketing",
    "consulting"
  ],
  "author": "NovaCoreVectra",
  "license": "MIT",
  "overrides": {
    "glob": "^10.4.6",
    "test-exclude": "^7.0.1"
  }
}
