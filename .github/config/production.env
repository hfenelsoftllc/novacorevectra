# Production Environment Configuration
ENVIRONMENT=production
AWS_REGION=us-east-1
DOMAIN_NAME=novacorevectra.net
PROJECT_NAME=novacorevectra
TERRAFORM_WORKSPACE=production

# Slack Configuration (set via GitHub secrets)
# SLACK_WEBHOOK_URL will be provided as a GitHub secret

# S3 Configuration
S3_BUCKET_PREFIX=novacorevectra-production
ENABLE_S3_VERSIONING=true
ENABLE_S3_LOGGING=true

# CloudFront Configuration
CLOUDFRONT_PRICE_CLASS=PriceClass_All
CLOUDFRONT_MIN_TTL=0
CLOUDFRONT_DEFAULT_TTL=3600
CLOUDFRONT_MAX_TTL=31536000

# Cache Control Settings
HTML_CACHE_CONTROL="public, max-age=300"
STATIC_CACHE_CONTROL="public, max-age=31536000"
API_CACHE_CONTROL="public, max-age=3600"

# Security Headers
ROBOTS_TAG="index, follow"
HSTS_MAX_AGE=31536000

# Monitoring
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_FAILURE_THRESHOLD=3

# Deployment Settings
DEPLOYMENT_TIMEOUT=900
INVALIDATION_TIMEOUT=1200
SYNC_DELETE_FLAG=true