# Staging Environment Configuration
ENVIRONMENT=staging
AWS_REGION=us-east-1
DOMAIN_NAME=novacorevectra.net
PROJECT_NAME=novacorevectra
TERRAFORM_WORKSPACE=staging

# S3 Configuration
S3_BUCKET_PREFIX=novacorevectra-staging
ENABLE_S3_VERSIONING=true
ENABLE_S3_LOGGING=false

# CloudFront Configuration
CLOUDFRONT_PRICE_CLASS=PriceClass_100
CLOUDFRONT_MIN_TTL=0
CLOUDFRONT_DEFAULT_TTL=3600
CLOUDFRONT_MAX_TTL=86400

# Cache Control Settings
HTML_CACHE_CONTROL=public, max-age=300
STATIC_CACHE_CONTROL=public, max-age=31536000
API_CACHE_CONTROL=public, max-age=3600

# Security Headers
ROBOTS_TAG=noindex, nofollow
HSTS_MAX_AGE=31536000

# Monitoring
ENABLE_HEALTH_CHECKS=false
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_FAILURE_THRESHOLD=3

# Deployment Settings
DEPLOYMENT_TIMEOUT=600
INVALIDATION_TIMEOUT=900
SYNC_DELETE_FLAG=true