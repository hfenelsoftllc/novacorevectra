{
  "reporter": ["text", "html", "lcov", "json-summary"],
  "reports-dir": "coverage",
  "exclude": [
    "**/*.test.ts",
    "**/*.test.js",
    "**/*.test.tsx",
    "**/*.test.jsx",
    "**/__tests__/**",
    "**/node_modules/**",
    "**/dist/**",
    "**/build/**",
    "**/.next/**",
    "**/coverage/**",
    "**/*.config.js",
    "**/*.config.ts",
    "**/jest.setup.js",
    "**/jest.env.js",
    "**/next.config.js",
    "**/tailwind.config.js",
    "**/postcss.config.js",
    "**/*.d.ts",
    "**/index.ts",
    "**/index.js",
    "**/index.tsx",
    "**/index.jsx",
    "**/*.stories.ts",
    "**/*.stories.js",
    "**/*.stories.tsx",
    "**/*.stories.jsx",
    "**/*.mock.ts",
    "**/*.mock.js",
    "**/*.mock.tsx",
    "**/*.mock.jsx",
    "**/__mocks__/**",
    "**/app/**/layout.tsx",
    "**/app/**/layout.ts",
    "**/app/**/loading.tsx",
    "**/app/**/loading.ts",
    "**/app/**/error.tsx",
    "**/app/**/error.ts",
    "**/app/**/not-found.tsx",
    "**/app/**/not-found.ts",
    "**/src/styles/**",
    "**/src/images/**",
    "**/app/robots.ts",
    "**/app/sitemap.ts",
    "src/components/**",
    "src/hooks/**",
    "src/services/**",
    "src/types/**",
    "src/constants/**",
    "src/schemas/**",
    "app/**"
  ],
  "include": [
    "src/utils/**/*.ts",
    "src/utils/**/*.tsx"
  ],
  "all": true,
  "check-coverage": true,
  "per-file": true,
  "skip-full": false,
  "lines": 40,
  "functions": 40,
  "branches": 30,
  "statements": 40
}